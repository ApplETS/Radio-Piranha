<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="95dip"
    android:background="@android:color/transparent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/newsListItemLogo"
        android:layout_width="57dp"
        android:layout_height="63dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginBottom="7dip"
        android:layout_marginRight="5dip"
        android:src="@drawable/news_background_facebookets" />

    <TextView
        android:id="@+id/newsListItemDate"
        android:layout_width="fill_parent"
        android:layout_height="15dip"
        android:layout_marginTop="2dip"
        android:layout_toRightOf="@id/newsListItemLogo"
        android:gravity="center_vertical"
        android:textColor="#fff"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/newsListItemTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/newsListItemDate"
        android:layout_toRightOf="@id/newsListItemLogo"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="1"
        android:textColor="#fff"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/newsListItemDescription"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_below="@id/newsListItemTitle"
        android:layout_marginBottom="10dip"
        android:layout_toRightOf="@id/newsListItemLogo"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="2"
        android:textColor="#fff" />

</RelativeLayout>